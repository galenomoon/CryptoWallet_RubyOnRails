<p id="notice"><%= notice %></p>

<h1>Coins</h1>

<table>
    <thead>
        <tr>
            <th>Description</th>
            <th>Acronym</th>
            <th>Image</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @coins.each do |coin| %>
            <tr>
                <td><%= coin.description %></td>
                <td><%= coin.acronym %></td>
                <td><%= image_tag coin.url_image,  size:"25x25" %></td>
                <td><%= link_to 'Show', coin %></td>
                <td><%= link_to 'Edit', edit_coin_path(coin) %></td>
                <td><%= link_to 'Delete', coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>

